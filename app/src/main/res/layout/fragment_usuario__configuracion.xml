<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/azulBarra"
    tools:context=".fragments.usuarioFragment_Configuracion">

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configuración"
                android:textColor="@color/blanco"
                android:textSize="34sp"
                android:textStyle="bold" />

            <SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/blanco">

            </SearchView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="620dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/blanco">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="General"
                        android:textColor="#2962FF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationX="10dp"
                        android:translationY="10dp" />

                    <Button
                        android:id="@+id/miperfil"
                        app:icon="@drawable/baseline_person_24"
                        app:iconTint="@color/negro"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/blanco"
                        android:freezesText="false"
                        android:text="Perfil"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/negro" />


                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Permisos"
                        android:textColor="#2962FF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationX="10dp" />

                    <Button
                        android:id="@+id/aceptarUbicacion"
                        app:icon="@drawable/baseline_location_on_24"
                        app:iconTint="@color/negro"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/blanco"
                        android:freezesText="false"
                        android:text="Ubicación"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/negro" />

                    <Button
                        android:id="@+id/ActualizacionInformacion"
                        app:icon="@drawable/baseline_notifications_24"
                        app:iconTint="@color/negro"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/blanco"
                        android:freezesText="false"
                        android:text="Notificaciones"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/negro" />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seguridad"
                        android:textColor="#2962FF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:translationX="10dp" />

                    <Button
                        android:id="@+id/btnTerminos"
                        app:icon="@drawable/baseline_contact_page_24"
                        app:iconTint="@color/negro"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/blanco"
                        android:freezesText="false"
                        android:text="Terminos y condiciones"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/negro" />

                    <Button
                        android:id="@+id/acercaNosotros"
                        app:icon="@drawable/baseline_info_24"
                        app:iconTint="@color/negro"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/blanco"
                        android:freezesText="false"
                        android:text="Acerca de nosotros"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/negro" />

                    <Button
                        android:id="@+id/cerrarSesion"
                        app:icon="@drawable/baseline_logout_24"
                        app:iconTint="@color/negro"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/blanco"
                        android:freezesText="false"
                        android:text="Cerrar Sesion"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/negro" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>